{
  "target": "esnext",
  "module": "CommonJS",
  "include": ["./artifacts/**/*", "./.openzeppelin/**/*", "./src/**/*", "./src/**/*.json", "./test"],
  "exclude": ["node_modules", "./dist", "./deploy", "hardhat.config.ts", "./test"],
  "allowSyntheticDefaultImports": true,
  "compilerOptions": {
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "rootDir": "src",
    "outDir": "dist",
    "composite": true,
    "skipLibCheck": true,
    "noEmit": true,
    "declarationMap": true
  }
}
